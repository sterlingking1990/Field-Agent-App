<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

   <ImageView
       android:id="@+id/main_item_onBoarding_iv"
       android:layout_width="match_parent"
       android:layout_height="390dp"
       android:layout_margin="0dp"
       android:scaleType="centerCrop"
       android:src="@drawable/abj_girl"/>

    <TextView
        android:id="@+id/main_item_onBoarding_header_tv"
        android:layout_width="286dp"
        android:layout_height="92dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="37dp"
        android:fontFamily="@font/titillium_web"
        android:text="@string/splash_1_big_text"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/main_item_onBoarding_subtext_tv"
        android:layout_width="286dp"
        android:layout_height="92dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="57dp"
        android:layout_marginEnd="57dp"
        android:text="@string/splash_1_small_text"
        android:textSize="14sp"
        android:textColor="@color/colorTextPrimary"
        android:fontFamily="@font/roboto"/>

</LinearLayout>