<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorBackground</item>
        <item name="android:windowBackground">@drawable/splash_custom_bg</item>
    </style>

    <style name="sign_up_button_style">
        <item name="android:layout_width">290dp</item>
        <item name="android:layout_height">51dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginStart">35dp</item>
        <item name="android:layout_marginEnd">35dp</item>
        <item name="android:paddingStart">69dp</item>
        <item name="android:paddingEnd">69dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>